{% extends 'ComptageMakerComptageBundle::layout.html.twig' %}

{% block title %}ComptageMaker - Connexion{% endblock %}

{% block div %}
    <br/>
    <h1>Connexion</h1>
{% endblock %}

{% block body %}
    {% if error is defined %}
        <div>{{ error }}</div>
    {% endif %}

<form class="form-horizontal" role="form" action="{{ path('comptage_login_check') }}" method="post">
        <fieldset>
        <legend>Connectez-vous</legend>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="username">Identifiant</label>
            <div class="col-sm-10">
                <input type="text" class="form-control input-lg" id="username" name="_username" value="{{ last_username }}" placeholder="Identifiant" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="password">Mot de passe</label>
            <div class="col-sm-10">
                <input type="password" class="form-control input-lg" id="password" name="_password" placeholder="Mot de Passe" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Connexion" class="btn btn-primary">
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}